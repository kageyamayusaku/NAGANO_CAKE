<div class="container">
  <div class="row my-4">
    <div class="bg-light text-dark" style="margin-left: 150px; font-size: 20px;">
      <strong>　注文履歴一覧　</strong>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tr>
        <td class="table-secondary" style="border: 1.5px solid black;">
          注文日
        </td>
        <td class="table-secondary" style="border: 1.5px solid black;">
          配送先
        </td>
        <td class="table-secondary" style="border: 1.5px solid black;">
          注文商品
        </td>
        <td class="table-secondary" style="border: 1.5px solid black;">
          支払金額
        </td>
        <td class="table-secondary" style="border: 1.5px solid black;">
          ステータス
        </td>
        <td class="table-secondary" style="border: 1.5px solid black;">
          注文詳細
        </td>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td style="border: 1.5px solid black; font-weight: bold;">
          <%= order.created_at.to_s(:datetime_jp) %>
        </td>
        <td style="border: 1.5px solid black; font-weight: bold;">
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td style="border: 1.5px solid black; font-weight: bold;">
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
          <% end %>
        </td>
        <td style="border: 1.5px solid black; font-weight: bold;">
          <%= order.total_payment.to_s(:delimited) %>
        </td>
        <td style="border: 1.5px solid black; font-weight: bold;">
          <%= order.status %>
        </td>
        <td style="border: 1.5px solid black;">
          <%= link_to " 表示する ", order_path(order.id), class: "btn btn-primary" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>