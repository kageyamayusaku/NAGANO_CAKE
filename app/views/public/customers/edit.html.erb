<div class="container">
  <div class="row my-4">
    <div class="bg-light text-dark" style="margin-left: 150px; font-size: 20px;">
      <strong>　会員情報編集　</strong>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <th class="col-3">氏名</th>
            <td class="col-4">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </td>
            <td class="col-5">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </td>
            <td>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>
              <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </td>
            <td></td>
          </tr>
          <tr>
            <th>住所</th>
            <td colspan="2">
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>
              <%= f.telephone_field  :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </td>
            <td></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
            <td></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit "　　　編集内容を保存　　　", class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to " 退会する ", customers_unsubscribe_path, class: "btn btn-danger" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>