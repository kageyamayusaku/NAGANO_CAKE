<div class="container">
  <div class="row my-4">
    <div class="bg-light text-dark" style="margin-left: 150px; font-size: 20px;">
      <strong>　会員一覧　</strong>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="table-secondary">
            <th>会員ID</th>
            <th><u>氏名</u></th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |f| %>
          <tr>
            <td>
              <%= f.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(f.id), class: "text-body" do %>
              <u><%= f.full_name %></u>
              <% end %>
            </td>
            <td>
              <%= f.email %>
            </td>
            <td>
            <% if f.is_deleted == false %>
              <li class="list-unstyled text-success"><strong>有効</strong></li>
            <% else %>
              <li class="list-unstyled text-muted"><strong>退会</strong></li>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
