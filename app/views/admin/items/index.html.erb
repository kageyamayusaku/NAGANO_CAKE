<div class="container">
  <div class="row my-4">
    <div class="bg-light text-dark" style="margin-left: 150px; font-size: 20px;">
      <strong>　商品一覧　</strong>
    </div>
    <div class="ml-auto" style="margin-right: 150px;">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus fa-2x" style="color: dimgray;"></i>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-10">
      <table class="table table-borderless table-hover table-inverse">
        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |f| %>
          <tr>
            <td>
              <%= f.id %>
            </td>
            <td>
              <%= link_to admin_item_path(f.id), class: "text-body" do %>
              <u><%= f.name %></u>
              <% end %>
            </td>
            <td>
              <%= f.price.to_s(:delimited) %>
            </td>
            <td>
              <%= f.genre.name %>
            </td>
            <td>
            <% if f.is_active == true %>
              <li class="list-unstyled text-success"><strong>販売中</strong></li>
            <% else %>
              <li class="list-unstyled text-muted"><strong>販売停止中</strong></li>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
