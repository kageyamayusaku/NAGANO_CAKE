<div class="container">
  <div class="row">
    <div class="fs-4 px-4 py-3 my-5 bg-light text-dark font-weight-bold">商品新規登録</div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-6">
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      <table>
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, class: "form-control-file", accept: "image/*" %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name, class: "form-control", placeholder: "商品名" %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: '--選択してください--'}) %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price, class: "form-control", placeholder: "1000" %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <%= f.radio_button :is_active, 0, checked: true %>販売中
            <%= f.radio_button :is_active, 1 %>販売停止中
          </td>
        </tr>
      </table>
      <div class="row justify-content-md-center">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>