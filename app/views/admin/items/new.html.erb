<div class="container">
  <div class="row">
    <div class="fs-4 px-4 py-3 my-5 bg-light text-dark">商品新規登録</div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <%= form_with model: @item do |f| %>
        <div class="mt-3">
          <label class="d-block">商品画像</label>
          <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="mt-3">
          <label class="d-block">商品名</label>
          <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
        </div>
        <div class="mt-3">
          <label class="d-block">商品説明</label>
          <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
        </div>
        <%#  <div class="mt-3">
             <label class="d-block">ジャンル</label>  %>
             <%#= f.text_area :genre, class:"form-control" %>
        <%#  </div>  %>
        <div class="mt-3">
          <label class="d-block">税抜価格</label>
          <%= f.text_field :price, class: "form-control", placeholder: "1000" %>
        </div>
        <div class="mt-3">
          <label class="d-block">販売ステータス</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
            <label class="form-check-label" for="exampleRadios1">販売中</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
            <label class="form-check-label" for="exampleRadios2">販売停止中</label>
          </div>
        </div>
        <div class="mt-3">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>