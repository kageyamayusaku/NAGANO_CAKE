<div class="container">
  <div class="row">
    <div class="fs-4 px-4 py-3 my-5 bg-light text-dark">
      <strong>注文履歴詳細</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>購入者</th>
            <td>
              <%= link_to admin_customer_path(@order.customer.id), class: "text-body" do %>
              <u><%= @order.name %></u>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.to_s(:datetime_jp) %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.postal_code %>　<%= @order.address %><br><%= @order.name %></%></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
            <%= form_with model: @order, url: admin_orders_path, method: :patch do |f| %>
              <%= f.select :status, Order.all.map { |status| [order.status]} %>
              <%= link_to "更新", admin_orders_path(f.id), class: "btn btn-success" %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <table>

      </table>
    </div>
  </div>
</div>