<div class="container">
  <div class="row my-4">
    <div class="bg-light text-dark" style="margin-left: 150px; font-size: 20px;">
      <strong>　注文履歴一覧　</strong>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-10">
      <table class="table table-hover table-inverse">
        <tbody>
          <tr class="table-secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id), class: "text-body" do %>
              <u><%= order.created_at.to_s(:datetime_jp) %></u>
              <% end %>
            </td>
            <td>
              <%= order.name %>
            </td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
            <td>
              <%= order.status %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>