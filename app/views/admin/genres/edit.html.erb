<div class="container">
  <div class="row my-4">
    <div class="bg-light text-dark" style="margin-left: 150px; font-size: 20px;">
      ジャンル<strong>編集</strong>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-11">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="mb-5">
          <label><strong>ジャンル名</strong></label>
          <%= f.text_field :name %>
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>