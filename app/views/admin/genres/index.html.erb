<div class="container">
  <div class="row">
    <div class="fs-4 px-4 py-3 my-5 bg-light text-dark">
      ジャンル<strong>一覧・追加</strong>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-11">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="mb-5">
          <label><strong>ジャンル名</strong></label>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <table class="table table-hover table-inverse">
        <thead class="bg-light text-dark">
          <tr>
            <th>　　ジャンル</th>
            <th style="width: 130px;"></th>
          </tr>
        </thead>
        <% @genres.each do |f| %>
        <tbody>
          <tr>
            <td>
              <%= f.name %>
            </td>
            <td style="width: 130px;">
              <%= link_to "編集する", edit_admin_genre_path(f.id), class: "btn btn-success" %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>